@model Examination.Shared.Exams.ExamDto
<div class="col-lg-6 responsive-column-half">
    <div class="card card-item card-preview" data-tooltip-content="#tooltip_content_1">
        <div class="card-image">
            <a href="course-details.html" class="d-block">
                <img class="card-img-top lazy" src="/images/img-loading.png" data-src="/images/img8.jpg" alt="Card image cap">
            </a>
            <div class="course-badge-labels">
                <div class="course-badge">Latest</div>
                <div class="course-badge blue">@(Model.IsTimeRestricted ? Model.Duration : "Unlimited time")</div>
            </div>
        </div><!-- end card-image -->
        <div class="card-body">
            <h6 class="ribbon ribbon-blue-bg fs-14 mb-3">All Levels</h6>
            <h5 class="card-title"><a href="/exam-details.html?id=@(Model.Id)">@Model.Name</a></h5>
            <p class="card-text"><a href="teacher-detail.html">@Model.CategoryName</a></p>
            <div class="rating-wrap d-flex align-items-center py-2">
            </div><!-- end rating-wrap -->
            
        </div><!-- end card-body -->
    </div><!-- end card -->
</div><!-- end col-lg-6 -->